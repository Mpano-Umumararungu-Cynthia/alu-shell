#!/usr/bin/env bash
#using top
# shellcheck disable=SC2009
top_output=$(top -b -n 1 -c | pgrep "bash")
pids=$(echo "$top_output" | awk '{print $1}')
process_names=$(echo "$top_output" | awk '{print $NF}')
x=$(echo "$pids" | wc -l)
for i in $(seq 1 "$x"); 
do
	pid=$(echo "$pids" | sed -n "${i}p")
	process_name=$(echo "$process_names" | sed -n "${i}p" )
	echo "PID: $pid, Process Name: $process_name"
	
done
